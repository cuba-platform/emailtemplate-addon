<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<app-component xmlns="http://schemas.haulmont.com/cuba/app-component.xsd"
               dependsOn="com.haulmont.reports, com.haulmont.cuba, com.haulmont.addon.grapesjs">
    <module blocks="*"
            name="global">
        <artifact appJar="true"
                  name="yet-global"/>
        <property name="cuba.persistenceConfig"
                  value="+com/haulmont/addon/emailtemplates/persistence.xml"/>
        <property name="cuba.metadataConfig"
                  value="+com/haulmont/addon/emailtemplates/metadata.xml"/>
        <property name="cuba.viewsConfig"
                  value="+com/haulmont/addon/emailtemplates/views.xml"/>
    </module>
    <module blocks="core"
            dependsOn="global"
            name="core">
        <artifact appJar="true"
                  name="yet-core"/>
        <artifact classifier="db"
                  configuration="dbscripts"
                  ext="zip"
                  name="yet-core"/>
        <property name="cuba.springContextConfig"
                  value="+com/haulmont/addon/emailtemplates/spring.xml"/>
        <property name="cuba.mainMessagePack"
                  value="+com.haulmont.addon.emailtemplates.core"/>
    </module>
    <module blocks="web"
            dependsOn="global"
            name="web">
        <artifact appJar="true"
                  name="yet-web"/>
        <artifact classifier="web"
                  configuration="webcontent"
                  ext="zip"
                  name="yet-web"/>
        <artifact configuration="themes"
                  name="yet-web" ext="jar"/>
        <property name="cuba.springContextConfig"
                  value="+com/haulmont/addon/emailtemplates/web-spring.xml"/>
        <property name="cuba.dispatcherSpringContextConfig"
                  value="+com/haulmont/addon/emailtemplates/web-dispatcher-spring.xml"/>
        <property name="cuba.windowConfig"
                  value="+com/haulmont/addon/emailtemplates/web-screens.xml"/>
        <property name="cuba.menuConfig"
                  value="+com/haulmont/addon/emailtemplates/web-menu.xml"/>
        <property name="cuba.permissionConfig"
                  value="+com/haulmont/addon/emailtemplates/web-permissions.xml"/>
        <property name="cuba.mainMessagePack"
                  value="+com.haulmont.addon.emailtemplates.web"/>
    </module>
</app-component>
