<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<views xmlns="http://schemas.haulmont.com/cuba/view.xsd">
    <view class="com.haulmont.addon.emailtemplates.entity.EmailTemplate"
          extends="_local"
          name="emailTemplate-view">
        <property name="attachments"
                  view="report.view">
            <property name="inputParameters"
                      view="_minimal">
                <property name="alias"/>
                <property name="entityMetaClass"/>
                <property name="parameterClassName"/>
                <property name="enumerationClass"/>
            </property>
        </property>
        <property name="parameters"
                  view="templateParameters-view">
        </property>
        <property name="group" view="_minimal"/>
    </view>

    <view class="com.haulmont.addon.emailtemplates.entity.ReportEmailTemplate"
          extends="_local"
          name="emailTemplate-view">
        <property name="attachments"
                  view="report.view">
            <property name="inputParameters"
                      view="_minimal">
                <property name="alias"/>
                <property name="entityMetaClass"/>
                <property name="parameterClassName"/>
                <property name="enumerationClass"/>
            </property>
        </property>
        <property name="parameters"
                  view="templateParameters-view">
        </property>
        <property name="group" view="_minimal"/>
        <property name="emailBody"
                  view="_minimal">
            <property name="inputParameters"
                      view="_minimal">
                <property name="alias"/>
                <property name="parameterClassName"/>
                <property name="enumerationClass"/>
            </property>
        </property>
    </view>

    <view class="com.haulmont.addon.emailtemplates.entity.JsonEmailTemplate"
          extends="_local"
          name="emailTemplate-view">
        <property name="attachments"
                  view="report.view">
            <property name="inputParameters"
                      view="_minimal">
                <property name="alias"/>
                <property name="entityMetaClass"/>
                <property name="parameterClassName"/>
                <property name="enumerationClass"/>
            </property>
        </property>
        <property name="parameters"
                  view="templateParameters-view">
        </property>
        <property name="group" view="_minimal"/>
    </view>

    <view class="com.haulmont.addon.emailtemplates.entity.TemplateParameters"
          extends="_local"
          name="templateParameters-view">
        <property name="report"
                  view="report.view">
            <property name="inputParameters"
                      view="_minimal">
                <property name="entityMetaClass"/>
                <property name="parameterClassName"/>
                <property name="alias"/>
                <property name="enumerationClass"/>
            </property>
            <property name="xml"/>
        </property>
        <property name="parameterValues"
                  view="_minimal"/>
    </view>
</views>
