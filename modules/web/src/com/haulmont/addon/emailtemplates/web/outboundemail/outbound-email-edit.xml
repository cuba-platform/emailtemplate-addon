<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.haulmont.addon.emailtemplates.web.outboundemail.OutboundEmailEdit"
        datasource="outboundEmailDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.addon.emailtemplates.web.outboundemail">
    <dsContext>
        <datasource id="outboundEmailDs"
                    class="com.haulmont.addon.emailtemplates.entity.OutboundEmail"/>
        <collectionDatasource id="templateParametersDs"
                              class="com.haulmont.addon.emailtemplates.entity.TemplateParameter"
                              view="templateParameter-view">
            <query>
                <![CDATA[select e from emailtemplates$TemplateParameter e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="AUTO"
                width="AUTO"/>
    <layout expand="buttonsPanel"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="outboundEmailDs">
            <column width="250px">
                <field caption="msg://from"
                       property="from"/>
                <field caption="msg://addresses"
                       property="addresses"/>
                <field caption="msg://emailTemplate"
                       property="emailTemplate"/>
            </column>
        </fieldGroup>
        <scrollBox id="propertiesScrollBox"
                   caption="msg://parameters"
                   spacing="true"/>
        <buttonsPanel id="buttonsPanel">
            <button id="sendButton"
                    caption="Send"
                    icon="ENVELOPE"
                    invoke="onSendButtonClick"/>
            <button id="testButton"
                    caption="Preview"
                    icon="CHECK"
                    invoke="onTestButtonClick"/>
            <button id="cancelButton"
                    caption="Cancel"
                    icon="CANCEL"
                    invoke="onCancelButtonClick"/>
        </buttonsPanel>
    </layout>
</window>
