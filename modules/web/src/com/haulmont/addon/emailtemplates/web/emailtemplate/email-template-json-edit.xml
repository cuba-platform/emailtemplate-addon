<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.haulmont.addon.emailtemplates.web.emailtemplate.JsonEmailTemplateEdit"
        datasource="emailTemplateDs"
        messagesPack="com.haulmont.addon.emailtemplates.web.emailtemplate"
        xmlns:et="http://schemas.haulmont.com/emailtemplates/0.1/ui-component.xsd">
    <dsContext>
        <datasource id="emailTemplateDs"
                    class="com.haulmont.addon.emailtemplates.entity.JsonEmailTemplate"
                    view="emailTemplate-view">
            <collectionDatasource id="attachedFilesDs"
                                  property="attachedFiles"/>
            <collectionDatasource id="attachedReportsDs"
                                  property="attachedTemplateReports">
                <collectionDatasource id="parameterValuesDs" property="parameterValues"/>
            </collectionDatasource>
        </datasource>

        <datasource
                id="reportDs"
                class="com.haulmont.reports.entity.Report"
                view="report.edit"
                allowCommit="false">
            <collectionDatasource id="parametersDs" property="inputParameters"
                                  datasourceClass="com.haulmont.reports.gui.datasource.InputParametersDataSource"/>
            <collectionDatasource id="valuesFormatsDs" property="valuesFormats" allowCommit="false"/>
            <collectionDatasource id="templatesDs" property="templates" allowCommit="false"/>
            <collectionDatasource id="stringParametersDs"
                                  property="inputParameters"
                                  datasourceClass="com.haulmont.reports.gui.datasource.TextInputParametersDataSource"
                                  allowCommit="false"/>
        </datasource>

        <collectionDatasource id="groupsDs"
                              class="com.haulmont.addon.emailtemplates.entity.TemplateGroup"
                              view="_minimal">
            <query>
                <![CDATA[select e from emailtemplates$TemplateGroup e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="tabsheet"
            width="100%">
        <tabSheet id="tabsheet">
            <tab id="main"
                 caption="msg://main">
                <split id="split"
                       dockable="true"
                       height="100%"
                       orientation="horizontal"
                       pos="20%"
                       width="100%">
                    <scrollBox id="propertiesScroll"
                               height="100%">
                        <vbox margin="false,true,false,false"
                              spacing="true">
                            <hbox id="dropZone" spacing="true" stylename="c-edit-window-actions" margin="true"
                                  width="100%" expand="space">
                                <upload id="fileUpload" dropZone="dropZone" uploadButtonIcon="DOWNLOAD"
                                        description="msg://importJson"
                                        uploadButtonCaption=""/>
                                <button id="exportJson" invoke="exportJson" icon="UPLOAD"
                                        description="msg://exportJson"/>
                                <button id="exportHtml" invoke="exportHtml" icon="CODE" description="msg://exportHtml"/>
                                <button id="viewHtml" invoke="viewHtml" icon="EYE" description="msg://viewHtml"/>
                                <button id="exportReport" invoke="exportReport" icon="FILE_TEXT"
                                        description="msg://exportReport"/>
                                <label id="space"/>
                            </hbox>
                            <groupBox caption="msg://info"
                                      collapsable="true">
                                <fieldGroup id="infoGroup"
                                            captionAlignment="TOP"
                                            datasource="emailTemplateDs"
                                            width="100%">
                                    <column width="100%">
                                        <field property="name" required="true"/>
                                        <field property="code"/>
                                        <field optionsDatasource="groupsDs"
                                               property="group"/>
                                    </column>
                                </fieldGroup>
                            </groupBox>
                            <groupBox caption="msg://defaultValues"
                                      collapsable="true"
                                      collapsed="true">
                                <fieldGroup id="defaultGroup"
                                            captionAlignment="TOP"
                                            datasource="emailTemplateDs"
                                            width="100%">
                                    <column width="100%">
                                        <field property="subject"/>
                                        <field property="from"/>
                                        <field property="to"
                                               rows="3"/>
                                        <field property="cc"
                                               rows="3"/>
                                        <field property="bcc"
                                               rows="3"/>
                                    </column>
                                </fieldGroup>
                            </groupBox>
                        </vbox>
                    </scrollBox>
                    <et:unlayerTemplateEditor id="templateEditor"
                                              height="100%"/>
                </split>
            </tab>
            <tab id="parametersAndFormatsTab" caption="msg://parametersAndFormatsTab">
                <hbox width="100%" height="100%" spacing="true" margin="false;true;true;true">
                    <frame src="/com/haulmont/reports/gui/report/edit/tabs/parameters.xml" id="parametersFrame"
                           height="100%" width="100%"/>
                    <frame src="/com/haulmont/reports/gui/report/edit/tabs/formats.xml" id="formatsFrame" height="100%"
                           width="100%"/>
                </hbox>
            </tab>
            <tab id="attachments" caption="msg://attachments" lazy="true">
                <frame src="/com/haulmont/addon/emailtemplates/web/emailtemplate/email-template-attachments.xml"
                       id="attachmentsFrame"
                       height="100%" width="100%"/>

            </tab>
        </tabSheet>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
