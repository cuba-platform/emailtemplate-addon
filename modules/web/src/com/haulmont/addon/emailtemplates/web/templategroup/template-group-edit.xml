<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.haulmont.addon.emailtemplates.web.templategroup.TemplateGroupEdit"
        datasource="templateGroupDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.addon.emailtemplates.web.templategroup">
    <dsContext>
        <datasource id="templateGroupDs"
                    class="com.haulmont.addon.emailtemplates.entity.TemplateGroup"
                    view="_local"/>
    </dsContext>
    <dialogMode height="AUTO"
                width="AUTO"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="templateGroupDs">
            <column width="400px">
                <field property="name"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
