<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="templateGroupsTable"
        messagesPack="com.haulmont.addon.emailtemplates.web.templategroup">
    <data readOnly="true">
        <collection id="templateGroupsDc"
                    class="com.haulmont.addon.emailtemplates.entity.TemplateGroup"
                    view="_local">
            <loader id="templateGroupsDl">
                <query>
                    <![CDATA[select e from emailtemplates$TemplateGroup e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="templateGroupsTable"
            spacing="true">
        <filter id="filter"
                applyTo="templateGroupsTable"
                dataLoader="templateGroupsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="templateGroupsTable"
                    width="100%"
                    dataContainer="templateGroupsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="templateGroupsTable.create"/>
                <button id="editBtn" action="templateGroupsTable.edit"/>
                <button id="removeBtn" action="templateGroupsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
