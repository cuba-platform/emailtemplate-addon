<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.haulmont.addon.emailtemplates.web.outboundemail.OutboundEmailScreen"
        messagesPack="com.haulmont.addon.emailtemplates.web.outboundemail">
    <dialogMode height="640"
                width="800"/>
    <layout expand="split">
        <split id="split" pos="70"
               orientation="vertical"
               width="100%">
            <groupBox height="100%" caption="msg://email">
                <label id="bodyLabel"/>
            </groupBox>
            <groupBox height="100%" caption="msg://Attachments">
                <vbox id="attachmentsBox"/>
            </groupBox>
        </split>
        <buttonsPanel>
            <button id="sendButton"
                    caption="Send"
                    icon="SEND"
                    invoke="onSendButtonClick"/>
            <button id="cancelButton"
                    caption="Cancel"
                    icon="CANCEL"
                    invoke="onCancelButtonClick"/>
        </buttonsPanel>
    </layout>
</window>
