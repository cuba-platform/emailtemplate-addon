<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.haulmont.addon.emailtemplates.web.outboundemail.OutboundEmailScreen"
        messagesPack="com.haulmont.addon.emailtemplates.web.outboundemail">
    <dialogMode height="AUTO"
                width="AUTO"/>
    <layout>
        <label id="bodyLabel"/>
        <split caption="msg://Attachments"
               height="10px"
               orientation="vertical"
               width="200px"/>
        <scrollBox id="attachmentsBox"
                   height="100px"/>
        <buttonsPanel>
            <button id="sendButton"
                    caption="Send"
                    icon="SEND"
                    invoke="onSendButtonClick"/>
            <button id="cancelButton"
                    caption="Cancel"
                    icon="CANCEL"
                    invoke="onCancelButtonClick"/>
        </buttonsPanel>
    </layout>
</window>
