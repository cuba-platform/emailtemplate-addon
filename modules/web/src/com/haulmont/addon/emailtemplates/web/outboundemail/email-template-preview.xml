<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.haulmont.addon.emailtemplates.web.outboundemail.EmailTemplatePreview"
        messagesPack="com.haulmont.addon.emailtemplates.web.outboundemail">
    <dialogMode height="640"
                width="800"/>
    <layout expand="split">
        <split id="split"
               orientation="vertical"
               pos="70"
               width="100%">
            <groupBox caption="msg://email"
                      height="100%">
                <label id="bodyLabel"/>
            </groupBox>
            <groupBox caption="msg://attachments"
                      height="100%">
                <vbox id="attachmentsBox"/>
            </groupBox>
        </split>
        <buttonsPanel>
            <button id="sendButton"
                    caption="Send"
                    icon="SEND"
                    invoke="onSendButtonClick"/>
            <button id="closeButton"
                    caption="Close"
                    icon="CLOSE"
                    invoke="onCloseButtonClick"/>
        </buttonsPanel>
    </layout>
</window>
