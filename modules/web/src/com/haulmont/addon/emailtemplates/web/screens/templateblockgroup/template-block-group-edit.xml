<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.haulmont.addon.emailtemplates.web.screens.templateblockgroup">
    <data>
        <instance id="templateBlockGroupDc"
                  class="com.haulmont.addon.emailtemplates.entity.TemplateBlockGroup"
                  view="_local">
            <loader/>
        </instance>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                modal="true"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="templateBlockGroupDc">
            <column width="400px">
                <textField id="nameField" property="name"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
