<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.haulmont.addon.emailtemplates.web.screens.HtmlSourceCodeWindow"
        messagesPack="com.haulmont.addon.emailtemplates.web.screens">
    <dialogMode height="600"
                width="800"/>
    <layout expand="sourceCode" spacing="true">
        <sourceCodeEditor id="sourceCode"
                          mode="HTML"
                          width="100%"/>
        <hbox id="buttons" spacing="true" stylename="c-edit-window-actions">
            <button id="windowCommit" caption="msg://save" icon="EDITOR_OK"/>
            <button id="windowClose" caption="msg://close" icon="EDITOR_CANCEL"/>
        </hbox>
    </layout>
</window>
