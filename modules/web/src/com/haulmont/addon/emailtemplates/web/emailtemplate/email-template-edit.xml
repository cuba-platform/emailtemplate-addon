<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.haulmont.addon.emailtemplates.web.emailtemplate.EmailTemplateEdit"
        datasource="emailTemplateDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.addon.emailtemplates.web.emailtemplate">
    <dsContext>
        <datasource id="emailTemplateDs"
                    class="com.haulmont.addon.emailtemplates.entity.EmailTemplate"
                    view="emailTemplate-view">
            <collectionDatasource id="attachmentsDs"
                                  property="attachments"/>
            <collectionDatasource id="parametersDs"
                                  property="parameters">
                <collectionDatasource id="parameterValuesDs"
                                      property="parameterValues"/>
            </collectionDatasource>
        </datasource>
        <collectionDatasource id="groupsDs"
                              class="com.haulmont.addon.emailtemplates.entity.TemplateGroup"
                              view="_minimal">
            <query>
                <![CDATA[select e from emailtemplates$TemplateGroup e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="emailBodiesDs"
                              class="com.haulmont.reports.entity.Report"
                              view="_minimal">
            <query>
                <![CDATA[select e from report$Report e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <hbox spacing="true">
            <fieldGroup id="fieldGroup"
                        datasource="emailTemplateDs">
                <column width="250px">
                    <field property="name"/>
                    <field optionsDatasource="groupsDs"
                           property="group"/>
                    <field property="code"/>
                    <field contextHelpText="msg://help"
                           property="caption"/>
                    <field optionsDatasource="emailBodiesDs"
                           property="emailBody"/>
                </column>
            </fieldGroup>
            <split height="100%"
                   orientation="horizontal"
                   width="20px"/>
            <scrollBox id="propertiesScrollBox"
                       caption="msg://Default parameters"
                       height="100%"/>
        </hbox>
        <groupBox id="attachmentsBox"
                  caption="msg://com.haulmont.addon.emailtemplates.entity/EmailTemplate.attachments">
            <table id="attachmentsTable"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="add"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="name"/>
                    <column id="localeNames"/>
                    <column id="code"/>
                    <column id="group"/>
                    <column id="reportType"/>
                    <column id="description"/>
                </columns>
                <rows datasource="attachmentsDs"/>
                <buttonsPanel>
                    <button action="attachmentsTable.add"/>
                    <button action="attachmentsTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
