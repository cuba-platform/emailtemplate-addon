<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.haulmont.addon.emailtemplates.web.contentemailtemplate.ContentEmailTemplateEdit"
        datasource="contentEmailTemplateDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.addon.emailtemplates.web.contentemailtemplate">
    <dsContext>
        <datasource id="contentEmailTemplateDs"
                    class="com.haulmont.addon.emailtemplates.entity.ContentEmailTemplate"
                    view="emailTemplate-view">
            <collectionDatasource id="attachmentsDs"
                                  property="attachments"/>
        </datasource>
        <collectionDatasource id="groupsDs"
                              class="com.haulmont.addon.emailtemplates.entity.TemplateGroup"
                              view="_minimal">
            <query>
                <![CDATA[select e from yet$TemplateGroup e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="reportsDs"
                              class="com.haulmont.reports.entity.Report"
                              view="_minimal">
            <query>
                <![CDATA[select e from report$Report e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="contentEmailTemplateDs">
            <column width="250px">
                <field property="name"/>
                <field optionsDatasource="groupsDs"
                       property="group"/>
                <field optionsDatasource="reportsDs"
                       property="report"/>
                <field property="code"/>
            </column>
        </fieldGroup>
        <groupBox id="attachmentsBox"
                  caption="msg://com.haulmont.addon.emailtemplates.entity/ContentEmailTemplate.attachments">
            <table id="attachmentsTable"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="add"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="locName"/>
                    <column id="name"/>
                    <column id="localeNames"/>
                </columns>
                <rows datasource="attachmentsDs"/>
                <buttonsPanel>
                    <button action="attachmentsTable.add"/>
                    <button action="attachmentsTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
