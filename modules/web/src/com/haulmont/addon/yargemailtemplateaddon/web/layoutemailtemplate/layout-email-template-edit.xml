<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.haulmont.addon.yargemailtemplateaddon.web.layoutemailtemplate.LayoutEmailTemplateEdit"
        datasource="layoutEmailTemplateDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.addon.yargemailtemplateaddon.web.layoutemailtemplate">
    <dsContext>
        <datasource id="layoutEmailTemplateDs"
                    class="com.haulmont.addon.yargemailtemplateaddon.entity.LayoutEmailTemplate"
                    view="emailTemplate-view"/>
        <collectionDatasource id="groupsDs"
                              class="com.haulmont.addon.yargemailtemplateaddon.entity.TemplateGroup"
                              view="_minimal">
            <query>
                <![CDATA[select e from yet$TemplateGroup e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="reportsDs"
                              class="com.haulmont.reports.entity.Report"
                              view="_minimal">
            <query>
                <![CDATA[select e from report$Report e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="layoutEmailTemplateDs">
            <column width="250px">
                <field property="name"/>
                <field optionsDatasource="groupsDs"
                       property="group"/>
                <field optionsDatasource="reportsDs"
                       property="report"/>
                <field property="code"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
