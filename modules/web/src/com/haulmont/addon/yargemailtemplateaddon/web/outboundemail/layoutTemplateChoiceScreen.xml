<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.haulmont.addon.yargemailtemplateaddon.web.outboundemail.LayoutTemplateChoiceScreen"
        messagesPack="com.haulmont.addon.yargemailtemplateaddon.web.outboundemail">
    <dsContext>
        <collectionDatasource id="layoutEmailTemplatesDs"
                              class="com.haulmont.addon.yargemailtemplateaddon.entity.LayoutEmailTemplate"
                              view="_base">
            <query>
                <![CDATA[select e from yet$LayoutEmailTemplate e where TYPE(e) = yet$LayoutEmailTemplate]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="AUTO"
                width="AUTO"/>
    <layout spacing="true">
        <lookupPickerField id="layoutChoiceField"
                           optionsDatasource="layoutEmailTemplatesDs"
                           required="true"/>
        <buttonsPanel>
            <button id="nextButton"
                    caption="Next"
                    invoke="onNextButtonClick"/>
            <button id="cancelButton"
                    caption="msg://Cancel"
                    invoke="onCancelButtonClick"/>
        </buttonsPanel>
    </layout>
</window>
